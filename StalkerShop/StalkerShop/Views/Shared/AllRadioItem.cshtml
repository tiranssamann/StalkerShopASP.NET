@model StalkerShop.Data.Models.RadioItem

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" style=" width: 100%;height: 50%;"/>
    <div class="card-body text-center" style="background-color:gray">
        <h2>Модель: @Model.name</h2>
        <h4>@Model.shortDesc</h4>
        <p>Цена: @Model.price.ToString("c")</p>
        <p>
            <a class="btn btn-warning" asp-controller="ShopRadioItem" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a>
            <a class="btn btn-warning" asp-controller="RadioItems" asp-action="RadioDetails" asp-route-id="@Model.id">Посмотреть сведения</a>
        </p>
    </div>
</div>

